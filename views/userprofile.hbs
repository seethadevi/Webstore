        <script>

            $(document).ready(function(){
                let customer = !!$.getParam('customerid') ? $.getParam('customerid') : '';
                let customerObject = '';
                if(!!customer){
                    getCustomer(customer);
                }else {
                    $.setParam('errorcode','error5');
                    window.location.href = 'msg';
                    return false;
                }
                const cartItems = !!$.getParam('cartItem') ? JSON.parse($.getParam('cartItem')): [];
                if(cartItems.length === 0){
                    $('#totalCartItem').html('0');
                    $('#totalCartItem1').html('0');
                } else {
                    $('#totalCartItem').html(cartItems.length);
                    $('#totalCartItem1').html(cartItems.length);
                }
                $('#btnGoToShoppingCart, #btnGoToShoppingCart1').on('click', function() {
                    const cartItems = !!$.getParam('cartItem') ? JSON.parse($.getParam('cartItem')): [];
                    if(cartItems.length === 0){
                        return false;
                    } else {
                        window.location.href = 'cart';
                    }
                });

                $('#userImage').on('click', function(){
                    $('#myProfileChoose').click();
                });

                $('#myProfileChoose').on('change', function(e){
		            // var file = e.target.files[0];
                    $( "#overlay, #ajaxLoading" ).show();
                    let formData = new FormData();
                    formData.append('file', e.target.files[0]);
                    $.ajax({
                        url: app.serverAPI + '/customer/uploadImg/multipleSize',
                        type: 'POST',
                        headers: {
                            'Authorization': 'DWS-TOKEN '+$.getParam('auth'),
                            'channel':'WEB',
                        },
                        data : formData,
                        processData: false,  // tell jQuery not to process the data
                        contentType: false,  // tell jQuery not to set contentType
                        success: function(response){
                            if(response.status === 'success') {
                                customerObject['picture'] = response.msg;
                                $('#userImage').attr('src', response.msg.md);
                                updateCustomer(customerObject);
                            } else {
                                 $( "#overlay, #ajaxLoading" ).hide();
                            }
                        }, error: function(xhr, status, error) {
                                //alert(xhr.responseJSON);
                             $( "#overlay, #ajaxLoading" ).hide();
                        }
                    });
                });

                function updateCustomer(customerObject) {
                    $.ajax({
                        url: app.serverAPI + '/customer/'+ customer,
                        type: 'PUT',
                        data:JSON.stringify(customerObject),
                        headers: {
                            'Authorization': 'DWS-TOKEN '+$.getParam('auth'),
                            'channel':'WEB',
                        },
                        contentType: 'application/json; charset=utf-8',
                        dataType: 'json',
                        success: function(response){
                            $( "#overlay, #ajaxLoading" ).hide();
                        }, error: function(xhr, status, error) {
                                //alert();
                            $( "#overlay, #ajaxLoading" ).hide();
                        }
                    });
                }

                if((!!$.getParam('title') && $.getParam('title') !== "undefined" && $.getParam('title') !== "null") &&
                (!!$.getParam('eventImage') && $.getParam('eventImage') !== "undefined" && $.getParam('eventImage') !== "null")){
                     $(document).prop('title', $.getParam('title'));
                } else {
                    if(!!$.getParam('shopid') && $.getParam('shopid') !== "undefined" && $.getParam('shopid') !== "null"){
                        $.ajax({
                            url: app.serverAPI + '/shop/details/'+$.getParam('shopid'),
                            type: 'GET',
                            contentType: 'application/json; charset=utf-8',
                            dataType: 'json',
                            success: function(response){
                                if(response.status === 'success'){
                                    let eventName = (response.msg.name.toUpperCase()).replace(/AND/g, '&');
                                    $(document).prop('title', eventName);
                                    $.setParam('title', eventName);
                                    if(!!response.msg.picture){
                                        $.setParam('eventImage',response.msg.picture['sm']);
                                    } else {
                                        $.setParam('eventImage','');
                                    }
                                }
                            }, error: function(xhr, status, error) {
                                alert(xhr.responseJSON.msg);
                            }
                        });
                    }
                }

                function getCustomer(id){
                    $( "#overlay, #ajaxLoading" ).show();
                    $.ajax({
                        url: app.serverAPI + '/customer/'+ id,
                        type: 'GET',
                        headers: {
                            'Authorization': 'DWS-TOKEN '+$.getParam('auth'),
                            'channel':'WEB',
                        },
                        contentType: 'application/json; charset=utf-8',
                        dataType: 'json',
                        success: function(response){
                           $( "#overlay, #ajaxLoading" ).hide();
                            let htmlData = '';
                            htmlData += '<li class="list-group-item bold textColor">Profil</li>';
                            if( response.status === 'success') {
                                customerObject = response.msg;
                                if(!!response.msg['firstname'] && !!response.msg['lastname'] ) {
                                    htmlData +=  '<li class="list-group-item">'+response.msg['firstname'] + ' ' +response.msg['lastname']+'</li>'
                                }
                                if(!!response.msg['email'] ) {
                                    htmlData +=  '<li class="list-group-item">'+response.msg['email']+'</li>'
                                }
                                if(!!response.msg['dob'] ) {
                                    htmlData +=  '<li class="list-group-item">'+response.msg['dob']+'</li>'
                                }
                                if(!!response.msg['gender'] ) {
                                    htmlData +=  '<li class="list-group-item">'+response.msg['gender']+'</li>'
                                }
                                if(!!response.msg['mobile'] ) {
                                    htmlData +=  '<li class="list-group-item">'+response.msg['mobile']+'</li>'
                                }

                                if(!!response.msg['picture'] ) {
                                    $('#userImage').attr('src',response.msg['picture']['md']);
                                } else {
                                    $('#userImage').attr('src','/img/default-profile-picture.png');
                                }
                                $('#userDetails').html(htmlData);
                            } else {
                                alert(response.msg);
                            }
                        }, error: function(xhr, status, error) {
                             $( "#overlay, #ajaxLoading" ).hide();
                            alert(xhr.responseJSON.msg);
                        }

                    });
                }
            });
        </script>
